<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bienvenue "
        android:id="@+id/textWelcome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:textColor="@color/default_color"
        android:textStyle="bold"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ajout d&apos;un objet &quot;Food&quot;"
        android:id="@+id/textForm"
        android:layout_below="@+id/textWelcome"
        android:layout_alignParentStart="true"
        android:layout_marginTop="79dp"
        android:textSize="18dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/textForm"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:hint="Nom du food"
        android:background="@drawable/rounded"
        android:maxLines="1"
        android:paddingLeft="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="Prix"
        android:numeric="decimal"
        android:background="@drawable/rounded"
        android:layout_below="@+id/editText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:paddingLeft="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:id="@+id/buttonAdd"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/editText2"
        android:layout_toEndOf="@+id/textWelcome"
        android:background="@drawable/rounded"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ignorer"
        android:id="@+id/buttonIgnore"
        android:layout_alignTop="@+id/buttonAdd"
        android:layout_toStartOf="@+id/textWelcome"
        android:background="@drawable/rounded" />
</RelativeLayout>
